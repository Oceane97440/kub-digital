<% include ../layouts/doctype.ejs %>


        <h1>Liste users</h1>


        <table class="table table-striped">

            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Noms</th>
                    <th scope="col">Pr√©mons</th>
                    <th scope="col">Email</th>
                    <th scope="col">Profession</th>
                    <th scope="col">Tel</th>
                    <th scope="col">Annonceurs</th>
                    <th scope="col">Statut</th>
                    <th scope="col">Action</th>

                </tr>
            </thead>

            <% for(let i=0; i < users.length; i++) {%>
            <tbody>
                <tr>
                    <th scope="row"><%= users[i].id %></th>
                    <td><%= users[i].nom %></td>
                    <td><%= users[i].prenom %></td>
                    <td><%= users[i].email %></td>
                    <td><%= users[i].profession %></td>
                    <td><%= users[i].telephone %></td>
                    <td><%= users[i].id_annonceurs %></td>
                    <td><%= users[i].statut %></td>

                    <td>
                        <a class="btn btn-sm btn-info" href="/admin/detail/<%= users[i].id %>" type="button"><i
                                class="fas fa-eye"></i></a>
                        <a class="btn btn-sm btn-warning" href="/admin/edit/<%= users[i].id %>"><i
                                class="fa fa-pencil-alt"></i></a>

                        <a class="btn btn-sm btn-danger" href="/admin/delete/<%= users[i].id %>" type="button"><i
                                class="fas fa-times-circle"></i></a>


                    </td>



                </tr>

            </tbody>
            <% } %>

        </table>

        <% include ../layouts/doctype_end.ejs %>
