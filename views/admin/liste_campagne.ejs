<% include ../_partials/nav_dashboard.ejs %>


<div class="container-fluid">


    <div class="row">




        <div class="col-md-6 col-lg-12 col-sm-3">
            <div class="table-responsive" style="margin-top: 30px;">

                <table class="table table-striped table-dark">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Noms du campagne</th>
                            <th scope="col">Debut-fin campagne</th>
                            <th scope="col">Visuel upload</th>
                            <th scope="col">Formats</th>
                            <th scope="col">Support</th>
                            <th scope="col">Budget estimé</th>
                            <th scope="col">Budget global</th>
                            <th scope="col">Utilisateurs</th>
                            <th scope="col">Actions</th>


                        </tr>
                    </thead>
                    <% for(let i=0; i < campagnes.length; i++) {%>
                    <tbody>
                        <tr>
                            <th scope="row"><%= campagnes[i].id %></th>
                            <td><%= campagnes[i].nom_campagne %></td>
                            <td><%= campagnes[i].date_d %>
                                <br>
                                <%= campagnes[i].date_f %>
                            </td>
                            <td><%= campagnes[i].visuel.nom_visuel %></td>
                            <td><%= campagnes[i].format.nom_format %></td>
                            <td><%= campagnes[i].site.nom_site %></td>
                            <td><%= campagnes[i].nbr_impressions %></td>
                            <td><%= campagnes[i].budget_total %>€</td>
                            <td><%= campagnes[i].utilisateur.nom %> <%= campagnes[i].utilisateur.prenom %></td>


                            <td>



                                <a class="btn btn-sm btn-danger" href="/admin/campagnes/delete/<%= campagnes[i].id %>"
                                    type="button"><i class="fas fa-times-circle"></i></a>
                            </td>



                        </tr>

                    </tbody>
                    <% } %>

                </table>
            </div>
        </div>
    </div>
</div>
</div>

</div>
</div>











