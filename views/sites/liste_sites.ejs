<% include ../_partials/nav_dashboard.ejs %>
<div class="container-fluid">
       
        
    <div class="row">
      
        <div class="card bg-light mb-3 mx-auto mt-5" style="max-width: 18rem;">
            <div class="card-header">
                Ajouter d'un site
            </div>
            <div class="card-body">
                <form action="/admin/sites/create" method="POST">
                    <div class="form-group">
                        <label for="nom-categorie">Nom du site :</label>
                        <input type="text" class="form-control" name="nom_site" id="nom-categorie" />
                    </div>
                    <div class="form-group">
                        <label for="active-categorie">Statut :</label>
                        <select name="statut" class="form-control" id="active-categorie">
                            <option value="0">Inactif</option>
                            <option value="1">Actif</option>
                        </select>
                    </div>
                    
                    <div class="card-footer bg-transparent border-success justify-content-center d-flex">
                        <button type="submit" class="btn btn-success">Cr√©er</button>
                    </div>
                </form>
            </div>
        </div>
  
      <div class="col-md-6 col-lg-6 col-sm-3">
        <div class="card ">
          <div class="card-body">
            <h5 class="card-title">Sites</h5>
            <table class="table table-sm table-striped">
              <thead class="thead-dark" >
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Noms du site</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
        
                </tr>
            </thead>
        
            <% for(let i=0; i < sites.length; i++) {%>
            <tbody>
                <tr>
                    <th scope="row"><%= sites[i].id %></th>
                    <td><%= sites[i].nom_site %></td>
                    <td><%= sites[i].statut %></td>
        
        
                    <td>
                        
                        <a class="btn btn-sm btn-warning" href="/admin/sites/edit/<%= sites[i].id %>"><i
                                class="fa fa-pencil-alt"></i></>
        
                        <a class="btn btn-sm btn-danger" href="/admin/sites/delete/<%= sites[i].id %>" type="button"><i
                                class="fas fa-times-circle"></i></a>
        
        
                    </td>
        
        
        
                </tr>
        
            </tbody>
            <% } %>
        

            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

   


