<% include ../layouts/doctype.ejs %>


<div id="accordion">


    <div class="card card-default">
        <div class="card-header">
            <h4 class="card-title">
                <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">
                    <i class="glyphicon glyphicon-search text-gold"></i>
                    <b>Modifier votre campagne</b>
                </a>
            </h4>
        </div>
        <div id="collapse1" class="collapse show">
            <div class="card-body">
                <form id="signup-form" data-parsley-validate class="mt-5" role="form"
                    action="/campagne/update/<%= campagne.id %>" method="POST">
                    <div class="row">
                        <div class="col-md-3 col-lg-4">
                            <div class="form-group">
                                <label class="control-label">Nom de la campagne</label>
                                <input value="<%= campagne.nom_campagne %>" type="text" name="nom_campagne"
                                    class="form-control" />
                            </div>
                        </div>


                        <div class="col-md-2 col-lg-3">
                            <div class="form-group">
                                <label class="control-label">Debut de la campagne</label>
                                <div class="input-group date">
                                    <input type="datetime-local" class="form-control" name="date_d"
                                        value="<%= campagne.date_d %>" min="2020-04-09T08:00">


                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 col-lg-3">
                            <div class="form-group">
                                <label class="control-label">Fin de la campagne</label>
                                <input type="datetime-local" class="form-control" name="date_f"
                                    value="<%= campagne.date_f %>" min="2020-04-14T08:00">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 col-lg-3">
                            <div class="form-group">
                                <label class="control-label">Votre budget(HT en â‚¬)</label>
                                <input type="number" name="budget" value="<%= campagne.budget %>" min="2000" max="5000"
                                    class="form-control" />

                            </div>
                        </div>
                        <div class="col-md-2 col-lg-3">
                            <label class="control-label">Staut de la campagne</label>
                            <div class="form-group">
                                <select value="<%= campagne.statut %>" name="statut" id="">
                                    <option value="1">Actif</option>
                                    <option value="0">Inactif</option>

                                </select>
                            </div>
                        </div>


                        <div class="col-md-2 col-lg-3">
                            <label class="control-label">Choisir votre format</label>
                            <div class="form-group">
                                <select name="format_campagne" id="format_campagne">


                                </select>
                            </div>
                        </div>

                        <div class="col-md-3 col-lg-3">
                            <div class="form-group">
                                <label class="control-label">Id_visuel</label>
                                <input name="" type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="mt-5">
                        <button id="signup-submit-btn" class="btn btn-sm btn-danger col">
                            Modifier de votre campagne
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
<% include ../layouts/doctype_end.ejs %>