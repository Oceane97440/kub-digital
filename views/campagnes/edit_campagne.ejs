<% include ../layouts/doctype.ejs %>

<div class="card bg-light mb-3 mx-auto mt-5" style="max-width: 35rem;">
    <div class="card-header">
        Modification campagne
    </div>
    <div class="card-body">
        <form id="signup-form" data-parsley-validate class="mt-5" role="form"
        action="/campagne/update/<%= campagne.id %>" method="POST">
        <div class="row">
                <div class="form-group">
                    <label class="control-label" for="nom_campagne">Etape 1 : donner un nom Ã  votre campagne</label>
                    <input value="<%= campagne.nom_campagne %>" type="text" name="nom_campagne"  id="nom_campagne" required
                        class="form-control" />
                </div>


                <div class="form-group">
                    <div class="input-group date">
                        <label class="control-label" for="date_d">Votre commence du </label>  
                        <input type="datetime-local" class="form-control" name="date_d"
                            value="<%= campagne.date_d %>" id="date_d"
                            min="2020-04-09T08:00" required>


                    </div>
                </div>
            <div class="form-group">
                    <label class="control-label" for="date_f">Au</label>                    
                    <input type="datetime-local" class="form-control" name="date_f"
                        value="<%= campagne.date_f %>" min="<%= campagne.date_f %>">
                </div>
     </div>

     


                <div class="form-group">
                    <label class="control-label" for="format_campagne">Choisir votre format</label>
                    <select name="format_campagne" id="format_campagne" value="<%= campagne.format_campagne %>">


                    </select>
                </div>
            


                <div class="form-group">
                    <label class="control-label" for="visuel">Choisir votre visuel</label>

                    <select name="visuel_campagne" value="<%= campagne.visuel_campagne %>" id="visuel">


                    </select>
                </div>




                <div class="form-group">
                    <label class="control-label" for="sites">Choisir votre support de diffusion</label>

                    <select name="site_campagne" value="<%= campagne.site_campagne %>" id="sites">


                    </select>
                </div>



        </div>

            <div class="card-footer bg-transparent border-success justify-content-center d-flex">
                <button type="submit" class="btn btn-warning">Modif</button>
            </div>
        </form>
    </div>
</div>

<% include ../layouts/doctype_end.ejs %>