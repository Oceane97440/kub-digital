


<% include ../_partials/nav_profil.ejs %>


<div class="container-fluid">


    <div class="row">
        <div class="col-md-4 col-lg-4 col-sm-3">


            <div class="card card-default">
                <div class="card-header">
                    <h4 class="card-title">

                        Ajouter un annonceur
                    </h4>
                </div>
                <div id="collapse1" class="collapse show">
                    <div class="card-body">
                        <form action="/annonceurs/create" method="POST">
                            <div class="form-group">
                                <label for="nom_societe">Nom de la société :</label>
                                <input type="text" class="form-control" name="nom_societe" id="nom_societe" />
                            </div>
                       
                            <!-- <div class="form-group">
                                <label for="active-categorie">Statut :</label>
                                <select name="statut" class="form-control" id="active-categorie">
                                    <option value="0">Inactif</option>
                                    <option value="1">Actif</option>
                                </select>
                            </div> -->


                            </div>
                            <div class="mt-5">
                                <div class="card-footer bg-transparent border-success justify-content-center d-flex">
                                    <button type="submit" class="btn btn-success">Ajouter un annonceur</button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>


        <div class="col-md-6 col-lg-6 col-sm-3">
                <table class="table table-striped table-dark">
                    <thead class="thead-dark" >
                      <tr>
                          <th scope="col">#</th>
                          <th scope="col">Nom de la société </th>
                          <th scope="col">Status</th>
                          <th scope="col">Action</th>
      
      
                      </tr>
                    </thead>
                    <% for(let i=0; i < annonceurs.length; i++) {%>
                      <tbody>
                            <tr>
                                <th scope="row"><%= annonceurs[i].id %></th>
                                <td><%= annonceurs[i].nom_societe %></td>
                    
            
                                <td>
                                 
                                  <a class="btn btn-sm btn-warning" href="/annonceurs/edit/<%= annonceurs[i].id %>">
                                      <i class="fas fa-pencil-alt"></i></a>
              
                              <a class="btn btn-sm btn-danger" href="/annonceurs/delete/<%= annonceurs[i].id %>" type="button"><i
                                      class="fas fa-times-circle"></i></a>
            
                                </td>
            
            
            
                            </tr>
            
                        </tbody>
                        <% } %>
      
                  </table>
            </div>
          </div>

        </div>
        </div>











