<% include ../layouts/doctype.ejs %>
<link rel="stylesheet" href="/stylesheets/signup.css">

<main>
    <div class="row justify-content-center">

        <div class="col-md-4">
            <div class="card" style="margin-top: 20%;">
                <div class="login-card-light p-3 shadow-lg rounded">
                    <div class="pt-3">
                        <h2 class="text-danger">Connexion</h2>
                    </div>

                    <form id="signup-form" data-parsley-validate class="mt-5" role="form" action="/users/registre"
                        method="POST">


                        <label>Votre mail</label>
                        <div class="form-group">
                            <input type="email" name="email_user" class="form-control form-control-sm" required
                                placeholder="Renseigner un mail valide">
                        </div>
                        <div class="form-group">
                            <label>Mot de passe</label>
                            <input type="password" name="password_user" class="form-control form-control-sm" required
                                placeholder="Votre passe">
                        </div>


                        <div class="mt-5">
                            <button id="signup-submit-btn" class="btn btn-sm btn-danger col">
                                Connectez-vous
                            </button>
                        </div>



                        <div class="mt-5">
                            <p class="text-center">
                                Vous n'avez pas de compte ?
                                <a href="/users">Cr√©e votre compte</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>







    </main>

    <% include ../layouts/doctype_end.ejs %>





