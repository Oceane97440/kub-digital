<% include ../layouts/doctype.ejs %>
<link rel="stylesheet" href="/stylesheets/signup.css">

<main>

    <div class="row justify-content-center">

        <div class="col-md-4">
            <div class="card" style="margin-top: 15%;">
                <div class="login-card-light p-3 shadow-lg rounded">
                    <div class="pt-3">
                        <h2 class="text-danger">Inscription</h2>
                    </div>

                    <form id="signup-form" data-parsley-validate class="mt-5" role="form" action="/users/create"
                        method="POST">

                        <div class="row">
                            <div class="col">
                                <label for="nom_user">Nom</label>
                                <div class="form-group">
                                    <input type="text" name="nom_user" id="nom_user"
                                        class="form-control form-control-sm" required placeholder="Joe">
                                </div>
                            </div>
                            <div class="col">
                                <label for="prenom_user">Prenom</label>
                                <div class="form-group">
                                    <input type="text" name="prenom_user" id="prenom_user"
                                        class="form-control form-control-sm" required placeholder="Diego">
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col">

                                <label for="profession_user">Profession</label>
                                <div class="form-group">
                                    <input type="text" name="profession_user" id="profession_user"
                                        class="form-control form-control-sm" required placeholder="PDG">
                                </div>
                            </div>
                            <div class="col">
                                <label for="telephone_user">Téléphone</label>
                                <div class="form-group">
                                    <input type="tel" name="telephone_user" id="telephone_user"
                                        class="form-control form-control-sm" required placeholder="02 92 12 34 56"
                                        pattern="^(?:0|\(?\+33\)?\s?|0033\s?)[1-79](?:[\.\-\s]?\d\d){4}$">
                                    <!--+262 692 12 34 56 -->
                                </div>

                            </div>
                        </div>

                        <label for="email_user">Email</label>
                        <div class="form-group">
                            <input type="email" name="email_user" id="email_user" class="form-control form-control-sm"
                                required>
                        </div>
                        <div class="form-group">
                            <label for="password_user">Mot de passe</label>
                            <input type="password" name="password_user" id="password_user"
                                class="form-control form-control-sm" required>
                            <p>Votre mot de passe doit avoir entre 4 et 8 caratères maximum avec au minimum 1 chiffre</p>
                        </div>


                        <div class="mt-5">
                            <button id="signup-submit-btn" class="btn btn-sm btn-danger col">
                                Inscription
                            </button>
                        </div>


                        <div class="mt-5">
                            <p class="text-center">
                                Vous avez déja un compte ?
                                <a href="users/login">Connecter-vous</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>







</main>




<% include ../layouts/doctype_end.ejs %>