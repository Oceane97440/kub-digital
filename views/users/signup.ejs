<% include ../layouts/doctype.ejs %>
<link rel="stylesheet" href="/stylesheets/signup.css">

<main>

    <div class="row justify-content-center">

        <div class="col-md-4">
            <div class="card" style="margin-top: 15%;">
                <div class="login-card-light p-3 shadow-lg rounded">
                    <div class="pt-3">
                        <h2 class="text-danger">Inscription</h2>
                    </div>

                    <form id="signup-form" data-parsley-validate class="mt-5" role="form" action="/users/create"
                        method="POST">

                        <div class="row">
                            <div class="col">
                                <labe>Votre nom</labe>
                                <div class="form-group">
                                    <input type="text" name="nom_user" class="form-control form-control-sm" required
                                        placeholder="Joe">
                                </div>
                            </div>
                            <div class="col">
                                <label>Votre prenom</label>
                                <div class="form-group">
                                    <input type="text" name="prenom_user" class="form-control form-control-sm" required
                                        placeholder="Diego">
                                </div>
                            </div>
                        </div>











                        <div class="row">
                            <div class="col">

                                <label>Votre profession</label>
                                <div class="form-group">
                                    <input type="text" name="profession_user" class="form-control form-control-sm"
                                        required placeholder="PDG">
                                </div>
                            </div>
                            <div class="col">
                                <label>Téléphone</label>
                                <div class="form-group">
                                    <input type="tel" name="telephone_user" class="form-control form-control-sm"
                                        required placeholder="+262 692 12 34 56">
                                    <!--+262 692 12 34 56 -->
                                </div>

                            </div>
                        </div>


                        <label>Votre mail</label>
                        <div class="form-group">
                            <input type="email" name="email_user" class="form-control form-control-sm" required
                                placeholder="Renseigner un mail valide">
                        </div>
                        <div class="form-group">
                            <label>Mot de passe</label>
                            <input type="password" name="password_user" class="form-control form-control-sm" required
                                placeholder="Votre passe">
                            <p>Votre mot de passe doit avoir entre 4 et 8 caratère max avec au moin 1 chiffre</p>
                        </div>








                        <div class="mt-5">
                            <button id="signup-submit-btn" class="btn btn-sm btn-danger col">
                                Inscription
                            </button>
                        </div>



                        <div class="mt-5">
                            <p class="text-center">
                                Vous avez déja un compte ?
                                <a href="users/login">Connecter-vous</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>







    </main>




    <% include ../layouts/doctype_end.ejs %>





